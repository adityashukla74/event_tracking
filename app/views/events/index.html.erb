<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Location</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.date %></td>
    <td><%= event.location.name rescue nil %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
     <% if user_signed_in? and check_attend_status(event)%>
      <td><%= button_to 'Attend', attend_path(event)%></td>
      <% end %>
    <% if user_signed_in? and not check_attend_status(event)%>
      <td>You are signed up to attend for this event.
      <%= button_to 'Unattend', unattend_path(event)%>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>